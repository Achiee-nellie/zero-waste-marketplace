{
  "name": "zero-waste-marketplace",
  "version": "1.0.0",
  "description": "Zero Waste Marketplace - MERN Stack Application",
  "private": true,
  "scripts": {
    "dev": "cd frontend && pnpm run dev",
    "build": "cd frontend && pnpm run build",
    "preview": "cd frontend && pnpm run preview",
    "lint": "cd frontend && pnpm run lint",
    "backend:dev": "cd backend && pnpm run dev",
    "backend:start": "cd backend && pnpm start",
    "backend:install": "cd backend && pnpm install",
    "frontend:install": "cd frontend && pnpm install",
    "install:all": "pnpm run backend:install && pnpm run frontend:install"
  },
  "keywords": [
    "zero-waste",
    "marketplace",
    "sustainability",
    "mern",
    "react",
    "nodejs",
    "mongodb"
  ],
